<div class="page-header">
  <h3>
    Add A New Itinerary
    <a href="/itineraries/new" class="btn btn-sm btn-success"><i class="fa fa-plus"></i></a>
  </h3>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Itineraries (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @itineraries.each do |itinerary| %>
  <div class="isotope-item">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Itinerary #<%= itinerary.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Start date</dt>
          <dd><%= itinerary.start_date %></dd>

          <dt>Itinerary name</dt>
          <dd><%= itinerary.itinerary_name %></dd>

          <dt>User</dt>
          <dd><%= itinerary.user_id %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/itineraries/<%= itinerary.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/itineraries/<%= itinerary.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_itinerary/<%= itinerary.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
