<!-- Validation failure messages -->


<% if @itinerary.errors.any? %>
  <% @itinerary.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Itinerary</h3>
      </div>
      <div class="panel-body">
        <form action="/create_itinerary" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for start_date-->
      <div class="form-group">
        <label for="start_date" class="col-sm-2 control-label">Start Date</label>
        <div class="col-sm-10">
          <div class="input-group date" id= "datetimepicker1">
            <input name="start_date" placeholder="Select Calendar for Date" type="text" class="form-control" id="start_date" value="<%= (@itinerary.start_date || Date.today).strftime("%m/%d/%Y") %>">
          </div>
        </div>
      </div>

          <!-- Label and input for itinerary_name -->
          <div class="form-group">
            <label for="itinerary_name" class="col-sm-2 control-label">
              Itinerary name
            </label>
            <div class="col-sm-10">
              <textarea id="itinerary_name" name="itinerary_name" placeholder="Itinerary name" class="form-control" rows="1"><%= @itinerary.itinerary_name %></textarea>
            </div>
          </div>

          <!-- Label and input for user_id -->

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Itinerary
              </button>
              or
              <a href="/itineraries">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



<!-- End responsive panel example -->
