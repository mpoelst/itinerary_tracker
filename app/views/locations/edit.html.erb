<!-- Validation failure messages -->

<% if @location.errors.any? %>
  <% @location.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Location #<%= @location.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_location/<%= @location.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for location_name -->
          <div class="form-group">
            <label for="location_name" class="col-sm-2 control-label">
              Location name
            </label>
            <div class="col-sm-10">
              <textarea id="location_name" name="location_name" placeholder="Location name" class="form-control" rows="3"><%= @location.location_name %></textarea>
            </div>
          </div>

          <!-- Label and input for location_region -->
          <div class="form-group">
            <label for="location_region" class="col-sm-2 control-label">
              Location region
            </label>
            <div class="col-sm-10">
              <textarea id="location_region" name="location_region" placeholder="Location region" class="form-control" rows="3"><%= @location.location_region %></textarea>
            </div>
          </div>

          <!-- Label and input for location_zipcode -->
          <div class="form-group">
            <label for="location_zipcode" class="col-sm-2 control-label">
              Location zipcode
            </label>
            <div class="col-sm-10">
              <input type="text" id="location_zipcode" name="location_zipcode" placeholder="Location zipcode" class="form-control" value="<%= @location.location_zipcode %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Location
              </button>
              or
              <a href="/locations/<%= @location.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
