<div class="page-header">
  <h1>
    Days
    <a href="/days/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Days (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @days.each do |day| %>
  <div class="isotope-item">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Day #<%= day.id %></h3>
      </div>
      <div class="panel-body">
      <table>
        <tr>
          <th>Itinerary</th>
          <th>Arrival Date</th>
          <th>Origin Location</th>
          <th>Destination Location</th>
          <th>Lodging Name</th>
          <th>Lodging Address</th>
          <th>Transportation</th>
          <th>Events</th>
          <th>Notes</th>
          <th>Action</th>
        </tr>
        <tr>
          <td><%= day.itinerary_id %></td>
          <td><%= day.arrival_date %></td>
          <td><%= day.origin_location_id %></td>
          <td><%= day.destination_location_id %></td>
          <td><%= day.lodging_name %></td>
          <td><%= day.lodging_address %></td>
          <td><%= day.transportation %></td>
          <td><%= day.events %></td>
          <td><%= day.notes %></td>
          <td>
        <div class="btn-group">
          <a href="/days/<%= day.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/days/<%= day.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_day/<%= day.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
        </td>
        </tr>
        </table>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
